package improbable.transform;

// These are both types to be removed later when we decide on a compression scheme.

type Location {
    float x = 1;
    float y = 2;
    float z = 3;
}

type Quaternion {
    float w = 1;
    float x = 2;
    float y = 3;
    float z = 4;
}

component Transform {
    id = 11000;
    Location location = 1;
    Quaternion rotation = 2;
    uint32 tick = 3;
}